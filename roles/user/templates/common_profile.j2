{{ ansible_managed | comment }}

{% if __user_path_add | length > 0 %}
{% for p in __user_path_add %}
export PATH={{ p }}:$PATH
{% endfor %}
{% elif __user_path | length > 0 %}
export PATH={{ __user_path }}
{% else %}
# No path specified in Ansible
{% endif %}

{% if user_umask is defined %}
# User's umask
umask {{ user_umask }}
{% endif %}
